// see https://code.visualstudio.com/docs/getstarted/settings#_default-settings
{
  /* editor */
  "workbench.startupEditor": "newUntitledFile",
  "files.defaultLanguage": "markdown",
  // see https://github.com/microsoft/vscode/issues/38878
  "files.exclude": {
    "**/node_modules": true
  },
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",

  /* render */
  "editor.renderWhitespace": "all",
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120],

  /* completion */
  // see https://github.com/microsoft/vscode/issues/85707
  "editor.renameOnType": true,
  // see https://code.visualstudio.com/docs/editor/emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  /* format */
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // see https://code.visualstudio.com/updates/v1_44#_explicit-ordering-for-code-actions-on-save
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.organizeImports": true,
    "source.fixAll": true
  },

  /* language specific */
  "[dockerfile]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[powershell]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  // ms-vscode.powershell
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.promptToUpdatePackageManagement": false,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": false,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationAfterEveryPipeline",
  /* typescript */
  "typescript.tsdk": "node_modules/typescript/lib",

  /* extensions */
  "codesnap.showWindowControls": false,
  "codesnap.transparentBackground": true,
  "highlight-matching-tag.highlightSelfClosing": true,

  /* automatically changed by extensions */
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
